{
  "name": "cooler-loans-api",
  "version": "1.0.0",
  "description": "API for accessing Cooler Loans data",
  "main": "pulumi.ts",
  "author": "Jem <0x0xjem@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "codegen:graphql": "graphql-code-generator",
    "codegen:jsonschema": "yarn typescript-json-schema src/types/snapshot.ts Snapshot -o tmp/snapshot.jsonschema",
    "codegen:jsonschema-to-openapi": "yarn -s json-schema-to-openapi-schema convert tmp/snapshot.jsonschema > openapi/snapshot.yaml && prettier --write openapi/",
    "codegen": "yarn codegen:graphql && yarn codegen:jsonschema && yarn codegen:jsonschema-to-openapi && yarn lint:fix",
    "test": "jest",
    "lint": "eslint --config ./.eslintrc.js ./src/ --ext .jsx,.js,.tsx,.ts",
    "lint:fix": "prettier --write ./src/ & yarn lint --fix",
    "firestore:start": "gcloud emulators firestore start --host-port=localhost:8080"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typed-document-node": "^5.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@openapi-contrib/json-schema-to-openapi-schema": "^2.2.5",
    "@pulumi/gcp": "^6.0.0",
    "@pulumi/pulumi": "^3.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.1.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "typescript-json-schema": "^0.61.0"
  },
  "dependencies": {
    "@google-cloud/firestore": "^6.7.0",
    "firebase-admin": "^11.10.1",
    "graphql": "^16.8.0",
    "graphql-request": "^6.1.0",
    "graphql-tag": "^2.12.6"
  }
}